{
  "name": "resume-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:80": "vite --port 80 --host",
    "server": "node --loader tsx/esm src/server/server.ts",
    "server:dev": "node --loader tsx/esm --watch src/server/server.ts",
    "build": "tsc && vite build",
    "preview": "vite preview --port 80 --host",
    "start": "npm run build && npm run server",
    "compile-server": "tsc src/server/**/*.ts --outDir dist/server --module ESNext --target ES2022 --moduleResolution bundler",
    "server:prod": "node dist/server/server.js"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "multer": "^2.0.2",
    "puppeteer": "^24.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
