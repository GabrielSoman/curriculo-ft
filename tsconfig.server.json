{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "src/App.tsx", "src/main.tsx", "src/index.css"]
}